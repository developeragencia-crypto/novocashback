# Configurações de Produção - Vale Cashback
# IMPORTANTE: Copie este arquivo para .env e ajuste os valores

# ===== BANCO DE DADOS =====
DATABASE_URL=postgresql://valecashback_user:valecashback2024!@localhost:5432/valecashback
PGHOST=localhost
PGPORT=5432
PGUSER=valecashback_user
PGPASSWORD=valecashback2024!
PGDATABASE=valecashback

# ===== APLICAÇÃO =====
NODE_ENV=production
PORT=3000

# ===== SEGURANÇA =====
# IMPORTANTE: Gere uma chave forte com pelo menos 32 caracteres
SESSION_SECRET=sua_chave_secreta_super_forte_aqui_com_pelo_menos_32_caracteres

# ===== URLs DA APLICAÇÃO =====
# Substitua seudominio.com pelo seu domínio real
FRONTEND_URL=https://seudominio.com
BACKEND_URL=https://seudominio.com

# ===== CORS E ORIGENS PERMITIDAS =====
CORS_ORIGIN=https://seudominio.com
ALLOWED_ORIGINS=https://seudominio.com,https://www.seudominio.com

# ===== CONFIGURAÇÕES OPCIONAIS =====
# Rate limiting (requisições por minuto)
RATE_LIMIT=100

# Configurações de log
LOG_LEVEL=info

# Configurações de SSL (se necessário)
SSL_CERT_PATH=/etc/letsencrypt/live/seudominio.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/seudominio.com/privkey.pem